generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Job {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  image     String
  command   String[]
  env       Json
  schedule  String?
  timeout   Int?
  retries   Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model JobRun {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  jobId     String
  status    String
  logs      String
  exitCode  Int
  startedAt DateTime  @default(now())
  endedAt   DateTime?
}
